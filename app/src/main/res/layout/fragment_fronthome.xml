<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.fronthome"
    android:background="#191919"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:id="@+id/linear1"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/maths"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:padding="3dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mathematics"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Math is most beautiful weapon."
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/math"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear2"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/physics"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:padding="3dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subjectName1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physics"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/subText1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="In science there is only physics."
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/phy"
                    android:layout_gravity="right"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear3"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/chemistry"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:padding="3dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subjectName2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chemistry"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/subText2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chemistry is Mystery Chemicals."
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ch"
                    android:layout_gravity="right"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/bio"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:padding="3dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/subjectName3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biology"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/subText3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Biology is destiny for biologist."
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <ImageView
                    android:id="@+id/imagechanging"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_gravity="right"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear5"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/comp"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:padding="3dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Programming"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="To become smart java is here."
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/prog"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear6"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/web"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:padding="3dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Web Development"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Web is something to get localhost."
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/webs"

                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linear7"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:orientation="horizontal"
                android:background="@drawable/and"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"
                android:padding="3dp"
                android:layout_marginBottom="40dp"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Android Development"
                        android:textStyle="bold"
                        android:textSize="23dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/textforandroid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="13dp"
                        android:textColor="@color/white"
                        />

                </LinearLayout>

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/ic_baseline_lock_24"

                    />

            </LinearLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>